<div class="booyah-box col-4 offset-4 text-center">
    <h2>Add Goals for Today</h2>
    <%= simple_form_for @dailygoal do |f| %>
        <%= f.input :date %>
        <%= f.input :firstgoal %>
        <%= f.input :secondgoal %>
        <%= f.input :thirdgoal %>
        <br />
        <br />
        <%= f.submit "Enter Today's Goals", class: 'btn btn-primary'%>
        <br />
    <% end %>
</div>  